/*========================================================
 * Import nib
 *========================================================
 */
@import 'nib'

/*========================================================
 * Grab custom font
 *========================================================
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*========================================================
 * CSS reset
 *========================================================
 */
global-reset()

/*========================================================
 * Store main colours
 *========================================================
 */
main-col = #ddd
background-col = #eee

html
	overflow-y scroll
	
body
	font-family 'Quicksand'
	background-color background-col
	color #444

/*========================================================
 * Header
 *========================================================
 */
header
	width 100%
	padding 50px 10px
	color #fff
	font-size 25px
	text-align center
	background-color main-col
	border-bottom 1px solid darken(main-col, 30%)
	text-shadow 0px -1px 0px darken(main-col, 30%)

header h1
	font-size 40px

/*========================================================
 * Main Contents
 *========================================================
 */ 
.container
	width 500px
	margin 50px auto
	overflow hidden

	@media (min-width: 200px) and (max-width: 939px)
		width 100%

.main-content
	float left
	width 300px
	padding 10px
	@media (min-width: 440px) and (max-width: 939px)
		width 65%
		padding 5px
	
	@media (min-width: 200px) and (max-width: 439px)
		width 100%
		padding 5px
		float left

.clear
	clear both
		
/*========================================================
 * Input
 *========================================================
 */
input,
textarea, 
select,
button
	background #F6F6F6
	color #666
	width 200px
	font-size 13px
	padding 7px 10px
	border 1px solid #B9B9B9
	border-top-color #A4A4A4
	-moz-box-shadow 0 1px 0 #fff, inset 0 1px 1px rgba(0,0,0,.17)
	-ms-box-shadow 0 1px 0 #fff, inset 0 1px 1px rgba(0,0,0,.17)
	-webkit-box-shadow 0 1px 0 #fff, inset 0 1px 1px rgba(0,0,0,.17)
	box-shadow 0 1px 0 #fff, inset 0 1px 1px rgba(0,0,0,.17)
	-moz-border-radius 3px
	-webkit-border-radius 3px
	border-radius 3px
	float left

.sbtbtn
	width auto
	-moz-box-shadow none
	-ms-box-shadow none
	-webkit-box-shadow none
	box-shadow none
	cursor pointer
	float left

.sbtbtn
	&:hover
		background #fff
		color #cc0000
		-moz-box-shadow		0px 0px 10px #999
		-ms-box-shadow		0px 0px 10px #999
		-webkit-box-shadow	0px 0px 10px #999
		box-shadow			0px 0px 10px #999
		
/*========================================================
 * Footer
 *========================================================
 */ 
footer
	width 500px
	margin 50px auto
	border-top 1px dotted #ccc
	padding-top 5px
	font-size 13px
	
	@media (min-width: 200px) and (max-width: 939px)
		width 95%
		padding 5%